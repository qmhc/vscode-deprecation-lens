{
  "name": "deprecation-lens",
  "version": "1.2.0",
  "packageManager": "pnpm@10.26.2",
  "license": "MIT",
  "author": "qmhc",
  "description": "Dynamically collect and display all deprecated usages in your project.",
  "scripts": {
    "build": "pnpm -C packages/cli run build && pnpm run compile && pnpm run compile:ui",
    "changeset": "changeset",
    "compile": "tsx scripts/build.ts",
    "compile:ui": "pnpm -C packages/ui run build",
    "lint": "eslint --cache \"**/*.{js,cjs,mjs,ts,tsx}\"",
    "prettier": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,json,css,scss,html,md}\"",
    "release": "pnpm -C packages/cli publish --access public --no-git-checks && vsce publish --no-dependencies",
    "test": "vitest run",
    "version": "changeset version",
    "vscode:prepublish": "pnpm run build",
    "watch": "tsx scripts/build.ts --watch"
  },
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qmhc/vscode-deprecation-lens"
  },
  "dependencies": {
    "minimatch": "^10.0.1",
    "typescript": "~5.9.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/types": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.85.0",
    "@vexip-ui/commitlint-config": "^0.5.0",
    "@vexip-ui/eslint-config": "^1.3.0",
    "@vexip-ui/prettier-config": "^1.1.0",
    "@vscode/codicons": "^0.0.36",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "vitest": "^4.0.16"
  },
  "displayName": "Deprecation Lens",
  "categories": [
    "Linters"
  ],
  "publisher": "qmhc",
  "contributes": {
    "commands": [
      {
        "command": "deprecationLens.gotoLocation",
        "title": "Go to Location"
      }
    ],
    "configuration": {
      "title": "Deprecation Lens",
      "properties": {
        "deprecationLens.includePattern": {
          "type": "string",
          "default": "",
          "description": "Glob pattern for files to include in scan (e.g., src/**/*.ts)"
        },
        "deprecationLens.excludePattern": {
          "type": "string",
          "default": "",
          "description": "Glob pattern for files to exclude from scan (e.g., **/node_modules/**)"
        }
      }
    },
    "views": {
      "deprecationLens": [
        {
          "type": "webview",
          "id": "deprecationLensGlobalView",
          "name": "Project Deprecations"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "deprecationLens",
          "title": "Deprecation Lens",
          "icon": "assets/view-icon.svg"
        }
      ]
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "assets/logo.png"
}
